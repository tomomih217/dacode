<div class='kusocode-container'>
  <div class='col-sm-10 offset-sm-1'>
    <div class='d-flex justify-content-between'>
      <div><%= kusocode.user.username %></div>
      <div><%= l kusocode.created_at, format: :long %></div>
    </div>
    <div><%= kusocode.description %></div>
    <div class='black-code-area black-code-for-kusocode-index'><%= simple_format(h(kusocode.code), {}, sanitize: false, wrapper_tag: 'div') %></div>
    <div class='d-flex align-items-end'>
      <% if logged_in? %>
        <%= render 'flower', kusocode: kusocode %>
      <% else %>
        <%= image_tag 'grave-white-flower.png', size: '20x20' %>
      <% end %>
      <%= render 'flower_count', kusocode: kusocode %>
    </div>
    <% if logged_in? && current_user.own?(kusocode) %>
      <div class='text-end'><%= link_to t('defaults.delete'), kusocode_path(kusocode), method: :delete %></div>
    <% end %>
  </div>
</div>
<hr>
